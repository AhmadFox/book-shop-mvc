<h2>Search Author</h2>

<form action="/authors" method="GET">
    <label for="searchAuthors">Name</label>
    <input type="text" name="name" id="searchAuthors" value="<%= searchOptions.name %>">
    <button type="submit">Search</button>
</form>

<br>

<% authors.forEach(author => { %>
    <div><%= author.name %></div>
<% }) %>